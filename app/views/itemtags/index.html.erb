<p id="notice"><%= notice %></p>

<h1>Listing Itemtags</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @itemtags.each do |itemtag| %>
      <tr>
        <td><%= itemtag.name %></td>
        <td><%= link_to 'Show', itemtag %></td>
        <td><%= link_to 'Edit', edit_itemtag_path(itemtag) %></td>
        <td><%= link_to 'Destroy', itemtag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Itemtag', new_itemtag_path %>
