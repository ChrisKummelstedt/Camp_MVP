<div class="page-container">
  <div class="page-wrapper">
      <div class="panel-body">
        <div class="panel panel-default">
          <div class="panel-heading"><b><%= @receipt.name %></b></div>
          <div class="panel-body">
            <div class="row">
              <div class="col-md-6">
                <%= image_tag @receipt.image.url(:medium) %>
              </div>
              <div class="col-md-6">
                </br>
                <%= render 'receipts/cycleform' %>
                <P><%= link_to "Cancel", binder_path(@binder), :class => "btn btn-success"%></P>
                <P><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe + " Delete",  binder_receipt_path(@binder, @receipt), :method => 'delete', :confirm => 'Are you sure?', :class => "btn btn-danger" %></P>
              </div>
            </div>
          </div>
        </div>
        <div class="panel-footer">
          &nbsp
        </div>
      </div>
    </div>
  </div>
</div>
