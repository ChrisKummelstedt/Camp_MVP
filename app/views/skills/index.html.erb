<h1>My Skills</h1>

<ul class="skilllist">
  <%= render @skills %>
</ul>

<%= form_for Skill.new, remote:true do |f| %>
  <div class="form-group">
    <%= f.label :skill %>
    <%= f.text_field :skill, placeholder:
    "What are you good at?" %>
  </div>

  <div class="form-group">
    <%= f.label :skilllevel %>
    <%= f.select :skilllevel, ['Beginner', 'Intermediate', 'Advanced'] %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder:
    "Short description of your skill" %>
  </div>

  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>
