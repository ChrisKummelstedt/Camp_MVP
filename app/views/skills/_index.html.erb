<h1>My Skills</h1>

<%= form_for [@user, @skill], remote:true do |f| %>
  <div class="form-group">
    <%= f.label :skill %>
    <%= f.text_field :skill, required: true, placeholder:
    "What are you good at?" %>
  </div>

  <div class="form-group">
    <%= f.label :skilllevel %>
    <%= f.select :skilllevel, required: true, ['Beginner', 'Intermediate', 'Advanced'] %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, required: true, placeholder:
    "Short description of your skill" %>
  </div>

  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>

<ul class="skilllist">
  <%= render @skills %>
</ul>
