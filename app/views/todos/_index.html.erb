
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-9">
      <h3>What's the plan?</h3>
    </div>
      <div class="col-md-3">
      <div class="panel panel-default">
        <div class="panel-body">
          <h4><span class="glyphicon glyphicon-check"></span> <span id="not-done"><%= @completedtodos.size %></span></h4>
          <h4><span class="glyphicon glyphicon-unchecked"></span> <span id="done"><%= @todos.size %> </span></h4>
        </div>
      </div>
    </div>
  </div>

    <div class="team-todo-add">
      <div class="form-group">
        <%= form_for [@project, @team, @todo], remote: true do |f| %>
        <%= f.text_field :description, required: true, :class => "form-control", :id => "add-item-field"  %>
        <%= button_tag "", type: 'submit', class: "btn btn-default glyphicon glyphicon-plus-sign", id: "add-item-button" %><% end %>
      </div>

      <div class="todo_items">
        <%= render @todos %>
      </div>

      <div class="todo_items_completed">
        <%= render @completedtodos %>
      </div>
    </div>
  </div>
</div>
