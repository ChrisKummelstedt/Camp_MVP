<%= simple_form_for [@inventory, @item] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.label :tag_list, 'Tags (separated with comas)' %>
    <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name, {}, {multiple: true, :class => 'tag-collection-form'}%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
