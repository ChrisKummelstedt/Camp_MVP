<div class="page-container">
  <div class="page-wrapper">
    <div class="jumbotron" id="index-jumbo">
      <h3>Edit <%= @team.title %></h3>
    </div>

    <div class="image-wrap">
      <%= simple_form_for [@project, @team] do |f| %>
      <h3>Title</h3>
      <div class="form-group-project text-center">
        <%= f.input :title,  label: false, placeholder: 'What is it called?' %>
      </div>
      <h3>Description</h3>
      <div class="form-group-project text-center">
        <%= f.input :description, label: false, placeholder: 'Describe this awesomness' %>
      </div>
      <div class="form-group text-center">
        <%= f.button :submit, class: 'btn-success btn-block' %>
      </div>
      <% end %>
      <div class="form-group text-center">
        <%= button_to "Delete", project_team_path(@project, @team), method: :delete, class: 'btn-danger btn-block', data: { confirm: "Are you sure?" } %>
      </div>
    </div>
  </div>
</div>
