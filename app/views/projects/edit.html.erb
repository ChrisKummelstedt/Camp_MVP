<div class="form-wrapper">
  <%= simple_form_for @project, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      Let the journey begin:
      <%= f.input :title %>
    </div>
    <div class="form-group text-center">
      <%= f.input :description %>
    </div>
    <div class="form-group text-center">
      <%= f.input :total_budget %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit %>
    </div>
  <% end %>

</div>