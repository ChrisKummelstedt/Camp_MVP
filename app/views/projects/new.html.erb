<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= image_tag 'placeholder.jpg', id: 'image-preview', class: 'img-responsive' %>
        <%= simple_form_for @project, html: { multipart: true } do |f| %>
        <div class="row">
          <div class="col-md-12 text-center">
            <%= f.error_notification %>
          </div>
        </div>
        <div class="container-fluid">
          <div class="form-group">
            <%= f.input :image %>
          </div>
          <div class="form-group text-center">
            <%= f.input :title,  label: false, placeholder: 'What is it called?' %>
          </div>
          <div class="form-group text-center">
            <%= f.input :description, label: false, placeholder: 'Describe this glory' %>
          </div>
          <div class="form-group text-center">
            <%= f.input :total_budget, label: false, placeholder: '0' %>
          </div>
          <div class="form-group text-center">
            <%= f.button :submit, class: 'btn-success btn-block' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
