<h1>My Estimated Budget</h1>
<h3>Total Budget: </h3>

<%= simple_form_for Budget.new, remote: true do |f| %>

  <div class="form-group">
    <%= f.input :budget_item %>
  </div>

  <div class="form-group">
    <%= f.input :quantity %>
  </div>

  <div class="form-group">
    <%= f.input :cost_per_item %>
  </div>

  <div class="form-group">
  <%= f.submit "Add budget item" %>
  </div>
<% end %>

<ul class="budget_items">
  <%= render @budgets %>
</ul>
